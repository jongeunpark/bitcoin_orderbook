<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/help_view_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal">

            <View
                android:id="@+id/help_view_nav"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/white_rect" />

            <View
                android:id="@+id/help_view_actionbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.8"
                android:background="#000000" />
        </LinearLayout>


        <View
            android:id="@+id/help_view_summary"
            android:layout_width="match_parent"
            android:layout_height="152dp"

            android:alpha="0.8"
            android:background="#000000" />

        <View
            android:id="@+id/help_view_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:alpha="0.8"
            android:background="#000000" />
    </LinearLayout>

    <ImageView
        android:id="@+id/main_image_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/help_nav" />

    <ImageView
        android:id="@+id/main_image_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:src="@drawable/help_summary"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/main_image_pager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/help_summary"
        android:visibility="gone"/>
</RelativeLayout>